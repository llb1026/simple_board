<div class="container">
  <div class="row header">
    <h1>Update!</h1>
    <h3>Wanna change your message?</h3>
  </div>
  <div class="row body">
    <form action="/update/<%= @update.id %>" method="POST">
      <ul>
        
        <li>
          <p class="pull-left">
            <label for="first_name">Name</label>
            <input type="text" name="username" value="<%= @update.name %>">
          </p>
          <p class="pull-right">
            <label for="email">Email <span class="req">*</span></label>
            <input type="email" name="usermail" value="<%= @update.address %>">      
          </p>
        </li>

        <li><div class="divider"></div></li>
        <li>
          <label for="comments">Message</label>
          <textarea cols="46" rows="3" name="message"> <%= @update.content %> </textarea>
        </li>
        
        <li>
          <input class="btn btn-submit" type="submit" value="Update">
        </li>
        
      </ul>
    </form>  
  </div>
</div>